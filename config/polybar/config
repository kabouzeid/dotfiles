[colors]
;background = ${xrdb:color0:#222}
background = #232136
;background-alt = #403c41
;foreground = ${xrdb:color7:#222}
foreground = #e0def4
foreground-alt = #817c9c
primary = #ea9a97
secondary = #c4a7e7
alert = #eb6f92

[bar/main]
width = 100%
height = 56
; offset-x = 1%
; offset-y = 1%
; radius = 4.8
; fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
; line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

; font-0 = Inter:pixelsize=20;1
font-0 = JetBrains Mono:pixelsize=19;1
; somehow pixelsize doesn't work for the emoji font, use scale instead
font-1 = "Noto Color Emoji:style=Regular:scale=5;1"

modules-left = bspwm
;modules-center =
modules-right = network pulseaudio date time

;tray-position = right
;tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

label-focused = %index%
; label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

; Separator in between workspaces
; label-separator = |

[module/date]
type = internal/date
interval = 5

date = "%A %B %d"

format-underline = ${colors.secondary}

label = %{A3:gnome-calendar:}%date%%{A}

[module/time]
type = internal/date
interval = 1

time = "%H:%M"

format-underline = ${colors.secondary}

label = %{A3:gnome-clocks:}%time%%{A}

click-right = gnome-clocks

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
interval = 10
format-volume = <label-volume> <ramp-volume>
click-right = pavucontrol
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊
label-muted = %percentage%% 🔇
format-volume-underline = ${colors.secondary}
format-muted-underline = ${colors.secondary}

[module/network]
type = internal/network
interface = eno1
accumulate-stats = true
format-connected-underline = ${colors.secondary}
format-packetloss = <animation-packetloss> <label-connected>
format-packetloss-underline = ${colors.secondary}
label-connected = %upspeed:9% 🔼 %downspeed:9% 🔽
animation-packetloss-0 = ⚠
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = 📶
animation-packetloss-1-foreground = #000000
animation-packetloss-framerate = 500

[settings]
screenchange-reload = true
; compositing-background = xor
; compositing-background = screen
; compositing-foreground = source
; compositing-border = over
; pseudo-transparency = false

; [global/wm]
; margin-top = 5
; margin-bottom = 5

